<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/geren_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue01">

        <ImageView
            android:id="@+id/geren_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="0dp"
            android:onClick="onClick"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/geren_geren"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="个人中心"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/geren_mid"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_below="@id/geren_top"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:background="@color/lightskyblue">

        <ImageView
            android:id="@+id/geren_touxiang"
            android:layout_width="91dp"
            android:layout_height="103dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ih_touxiang" />

        <TextView
            android:id="@+id/geren_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="140dp"
            android:text="Single Dog"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/geren_jilu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/draw_btn_bg"
            android:onClick="onClick"
            android:text="账本记录"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/geren_jizhang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/draw_btn_bg"
            android:onClick="onClick"
            android:text="前去记账"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/geren_yusuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/geren_mid"
        android:background="@color/white"
        android:drawableRight="@mipmap/it_back_"
        android:onClick="onClick"
        android:padding="15dp"
        android:text="返回主页"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/geren_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/geren_yusuan"
        android:background="@color/white"
        android:drawableRight="@mipmap/it_back_"
        android:onClick="onClick"
        android:padding="15dp"
        android:text="@string/clear_all"
        android:textSize="16sp"
        android:textStyle="bold" />


</RelativeLayout>